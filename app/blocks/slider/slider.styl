.slider
	margin-top 25px

	&__title
		font-size 24px
		font-weight 700

	&__wrapper
		margin-top 30px
		padding-left 12px

	&__background
		background url(../images/background-slider.png) no-repeat top
		width 767px
		height 29px
		margin-left -15px
		background-position 0 -25px

	&__signs
		margin-top 5px
		display flex
		width 761px
		justify-content space-between
		font-size 13px
		font-weight 700
		line-height 1.462

	&__sign
		position relative

		&:nth-child(2)
			left 10px

		&:nth-child(3)
			width 170px
			right 5px

	.noUi-base
		margin-left -12px

.noUi-target
	background none
	border none
	box-shadow none

.noUi-horizontal
	height 10px
	width 99%

	.noUi-handle
		background url(../images/slider.png) no-repeat top
		width 17px
		height 14px
		box-shadow none
		border none
		border-radius none
		cursor pointer
		position absolute
		left -13px
		top 50%
		padding-top 2px
		transform translateY(-50%)

.noUi-horizontal .noUi-handle:after,.noUi-horizontal .noUi-handle:before
	position static
	height 0
	width 0
	background none
